global:
  smtp_from: 
  smtp_smarthost: 
  smtp_auth_username: 
  smtp_auth_password:
templates:
- '/etc/alertmanager/template/*.tmpl'
route:
  group_by: ['alertname']
  group_wait: 3s
  group_interval: 5s
  repeat_interval: 1h
  receiver: slack-receiver
receivers:
- name: 'slack-receiver'
  slack_configs:
  - api_url: "{{ SLACK_WEBHOOK_URL }}"
    channel: "{{ SLACK_RECIPIENT }}"
    send_resolved: true
    icon_url: 
    text: >-
        {{ '{{' }} range .Alerts -{{ '}}' }}
        *Alert:* {{ '{{' }} .Annotations.title {{ '}}' }}{{ '{{' }} if .Labels.severity {{ '}}' }} - `{{ '{{' }} .Labels.severity {{ '}}' }}`{{ '{{' }} end {{ '}}' }}
        *Description:* {{ '{{' }} .Annotations.description {{ '}}' }}
        *Details:*
          {{ '{{' }} range .Labels.SortedPairs {{ '}}' }} â€¢ *{{ '{{' }} .Name {{ '}}' }}:* `{{ '{{' }} .Value {{ '}}' }}`
          {{ '{{' }} end {{ '}}' }}
        {{ '{{' }} end {{ '}}' }}